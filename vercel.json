{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(css|js|assets)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*).html",
            "dest": "/public/$1.html"
        },
        {
            "src": "/$",
            "dest": "/public/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
}